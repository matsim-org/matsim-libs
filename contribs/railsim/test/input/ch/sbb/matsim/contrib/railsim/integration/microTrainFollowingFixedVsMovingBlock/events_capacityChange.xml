<?xml version="1.0" encoding="UTF-8"?>
<networkChangeEvents xmlns="http://www.matsim.org/files/dtd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.matsim.org/files/dtd http://www.matsim.org/files/dtd/networkChangeEvents.xsd">

	<!--Increase the fixed block capacity during train following -->
	<networkChangeEvent startTime="08:09:00">
		<link refId="t1_4-t1_5"/>
		<link refId="t1_5-t1_6"/>
		<link refId="t1_6-t1_7"/>

		<!-- Needs to be 3 with deadlock avoidance -->
		<attribute name="railsimTrainCapacity"  type="absolute" value="3"/>
	</networkChangeEvent>

	<!--Decrease the moving block capacity during train following -->
	<networkChangeEvent startTime="08:09:00">
		<link refId="t2_4-t2_5"/>
		<link refId="t2_5-t2_6"/>
		<link refId="t2_6-t2_7"/>

		<attribute name="railsimTrainCapacity"  type="absolute" value="0"/>
	</networkChangeEvent>

	<!--Increase again later -->
	<networkChangeEvent startTime="08:20:00">
		<link refId="t2_4-t2_5"/>
		<link refId="t2_5-t2_6"/>
		<link refId="t2_6-t2_7"/>

		<attribute name="railsimTrainCapacity"  type="absolute" value="3"/>
	</networkChangeEvent>

</networkChangeEvents>
