<?xml version="1.0" ?>
<!DOCTYPE config SYSTEM "http://www.matsim.org/files/dtd/config_v1.dtd"
	[
		<!ENTITY INPUTBASE    "test/input/playground/gregor/sim2d_v2/Controller2DTest/testController2D/">
		<!ENTITY OUTPUTBASE    "test/output/playground/gregor/sim2d_v2/Controller2DTest/testController2D/">
		<!ENTITY LOCALDTDBASE "./dtd">
