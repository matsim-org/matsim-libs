            <include>tutorial/**/*.java</include>
             <include>playground/**/*.java</include>
<!--             <include>de/schlichtherle/**/*.java</include>-->
          </includes>    
        </configuration>
            </configuration>
          </plugin>
          <plugin>
          <groupId>org.apache.maven.plugins</groupId>
           <artifactId>maven-surefire-plugin</artifactId>
            <version>2.4</version>
              <configuration>
                <excludes>
                  <exclude>**/*$*</exclude> <!-- exclude all inner classes -->
                  <exclude>org/matsim/testcases/TestDepth.java</exclude>
                  <exclude>org/matsim/**/*AllTests*.java</exclude>
                  <exclude>org/matsim/**/*SimpleTests.java</exclude>
                  <exclude>org/matsim/testcases/MatsimTestCase.java</exclude>
          </excludes>
          <forkMode>once</forkMode>
